type Query {
    orderById(id: String): Order @deprecated(reason: "replaced by ordersByCustomerNumber")
    ordersByCustomerNumber(customerNumber: String): [Order]
}

type Order {
    id: String!
    totalPrice: String!
    items: [OrderItem]
}

type OrderItem {
    id: String!
    status: String
    productId: String!
    # Fetching product information is typically slow.
    product: Product
}

type Product {
    title: String!
    imageUrl: String
}